<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Cam_Gal_Phn.Camera"
    android:id="@+id/rtl1"
    android:padding="20dp">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:id="@+id/scrlw1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/rtl2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/thickouterborder">

            <TextView
                android:id="@+id/cameraorder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="5dp"
                android:layout_marginTop="35dp"
                android:layout_marginEnd="5dp"
                android:fontFamily="@font/architects_daughter"
                android:gravity="center"
                android:text="DELIVERY ADDRESS"
                android:textStyle="bold"
                android:textColor="#9E0E04"
                android:textSize="30dp"
                />

            <RelativeLayout
                android:id="@+id/rlname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:layout_below="@+id/cameraorder">

                <EditText
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter the name"
                    android:textSize="23dp"
                    android:paddingEnd="17dp"
                    android:paddingStart="17dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="8dp"
                    android:background="@drawable/new_greygradient_et"
                    android:layout_marginStart="20dp"
                    android:textColorHint="#605C5C"
                    android:layout_marginEnd="65dp"
                    android:inputType="text"
                    android:textColor="#000000"
                    android:visibility="gone"
                    />

                <TextView
                    android:id="@+id/permanentname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="23dp"
                    android:text="Name"
                    android:inputType="text"
                    android:textColor="#000000"
                    android:textColorHint="#605C5C"
                    android:paddingEnd="17dp"
                    android:paddingStart="17dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="8dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="65dp"
                    android:background="@drawable/new_greygradient"

                    />



                <ImageButton
                    android:id="@+id/editname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_edit_black_24dp"
                    android:layout_alignParentEnd="true"
                    android:backgroundTint="@android:color/transparent"
                    android:layout_marginEnd="15dp"
                    />

                <ImageButton
                    android:id="@+id/save4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_save_black_24dp"
                    android:layout_alignParentEnd="true"

                    android:backgroundTint="@android:color/transparent"
                    android:layout_marginEnd="15dp"
                    android:visibility="gone"
                    />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlstreet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_below="@+id/rlname">

                <EditText
                    android:id="@+id/userstreet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="H/No.,Street"
                    android:textSize="23dp"
                    android:paddingEnd="17dp"
                    android:paddingStart="17dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="8dp"
                    android:layout_marginStart="20dp"
                    android:textColorHint="#605C5C"
                    android:layout_marginEnd="65dp"
                    android:inputType="textPostalAddress"
                    android:background="@drawable/new_greygradient_et"
                    android:textColor="#000000"
                    android:visibility="gone"
                    />

                <TextView
                    android:id="@+id/permanentuserstreet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="23dp"
                    android:text="H/No.,Street"
                    android:inputType="textPostalAddress"
                    android:textColor="#000000"
                    android:textColorHint="#605C5C"
                    android:paddingEnd="17dp"
                    android:paddingStart="17dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="8dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="65dp"
                    android:background="@drawable/new_greygradient"

                    />



                <ImageButton
                    android:id="@+id/edituserstreet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_edit_black_24dp"
                    android:layout_alignParentEnd="true"
                    android:backgroundTint="@android:color/transparent"
                    android:layout_marginEnd="15dp"
                    />

                <ImageButton
                    android:id="@+id/save5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_save_black_24dp"
                    android:layout_alignParentEnd="true"
                    android:backgroundTint="@android:color/transparent"
                    android:layout_marginEnd="15dp"
                    android:visibility="gone"
                    />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rltown"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_below="@+id/rlstreet">

                <EditText
                    android:id="@+id/usertown"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Town (or) Village"
                    android:textSize="23dp"
                    android:paddingEnd="17dp"
                    android:paddingStart="17dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="8dp"
                    android:layout_marginStart="20dp"
                    android:textColorHint="#605C5C"
                    android:layout_marginEnd="65dp"
                    android:inputType="textPostalAddress"
                    android:background="@drawable/new_greygradient_et"
                    android:textColor="#000000"
                    android:visibility="gone"
                    />

                <TextView
                    android:id="@+id/permanentusertown"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="23dp"
                    android:text="Town (or) Village"
                    android:inputType="textPostalAddress"
                    android:textColor="#000000"
                    android:textColorHint="#605C5C"
                    android:paddingEnd="17dp"
                    android:paddingStart="17dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="8dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="65dp"
                    android:background="@drawable/new_greygradient"

                    />



                <ImageButton
                    android:id="@+id/editusertown"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_edit_black_24dp"
                    android:layout_alignParentEnd="true"
                    android:backgroundTint="@android:color/transparent"
                    android:layout_marginEnd="15dp"
                    android:visibility="invisible"/>

                <ImageButton
                    android:id="@+id/save6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_save_black_24dp"
                    android:layout_alignParentEnd="true"

                    android:backgroundTint="@android:color/transparent"
                    android:layout_marginEnd="15dp"
                    android:visibility="gone"
                    />


            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rlstate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_below="@+id/rltown">

                <EditText
                    android:id="@+id/userstate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="State"
                    android:textSize="23dp"
                    android:paddingStart="10dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="8dp"
                    android:layout_marginStart="20dp"
                    android:textColorHint="#605C5C"
                    android:layout_marginEnd="65dp"
                    android:inputType="textPostalAddress"
                    android:textColor="#000000"
                    android:background="@drawable/new_greygradient_et"
                    android:visibility="gone"
                    />

                <TextView
                    android:id="@+id/permanentuserstate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="23dp"
                    android:text="State"
                    android:inputType="textPostalAddress"
                    android:textColor="#000000"
                    android:textColorHint="#605C5C"
                    android:paddingEnd="17dp"
                    android:paddingStart="17dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="8dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="65dp"
                    android:background="@drawable/new_greygradient"

                    />



                <ImageButton
                    android:id="@+id/edituserstate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_edit_black_24dp"
                    android:layout_alignParentEnd="true"
                    android:backgroundTint="@android:color/transparent"
                    android:layout_marginEnd="15dp"
                    android:visibility="invisible"/>

                <ImageButton
                    android:id="@+id/save7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_save_black_24dp"
                    android:layout_alignParentEnd="true"

                    android:backgroundTint="@android:color/transparent"
                    android:layout_marginEnd="15dp"
                    android:visibility="gone"
                    />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlphnno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_below="@+id/rlstate">

                <EditText
                    android:id="@+id/phnNum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Phonenumber"
                    android:textSize="23dp"
                    android:paddingEnd="17dp"
                    android:paddingStart="17dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="8dp"
                    android:layout_marginStart="20dp"
                    android:textColorHint="#605C5C"
                    android:layout_marginEnd="65dp"
                    android:inputType="number"
                    android:textColor="#000000"
                    android:background="@drawable/new_greygradient_et"
                    android:visibility="gone"
                    />

                <TextView
                    android:id="@+id/permanentphnNum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="23dp"
                    android:text="Phone Number"
                    android:inputType="number"
                    android:textColor="#000000"
                    android:textColorHint="#605C5C"
                    android:paddingEnd="17dp"
                    android:paddingStart="17dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="8dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="65dp"
                    android:background="@drawable/new_greygradient"

                    />




                <ImageButton
                    android:id="@+id/editphoneno"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_edit_black_24dp"
                    android:layout_alignParentEnd="true"
                    android:backgroundTint="@android:color/transparent"
                    android:layout_marginEnd="15dp"
                    android:visibility="gone"/>

                <ImageButton
                    android:id="@+id/save8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_save_black_24dp"
                    android:layout_alignParentEnd="true"

                    android:backgroundTint="@android:color/transparent"
                    android:layout_marginEnd="15dp"
                    android:visibility="gone"
                    />


            </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rldelivery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_below="@+id/rlphnno">
            <TextView
                android:id="@+id/permanentdeliveryoption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="23dp"
                android:text="Cash On Delivery"
                android:scrollbars="horizontal"
                android:inputType="number"
                android:textColor="#000000"
                android:textColorHint="#605C5C"
                android:paddingEnd="17dp"
                android:paddingStart="17dp"
                android:paddingTop="4dp"
                android:paddingBottom="8dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="65dp"
                android:background="@drawable/new_greygradient"

                />
        </RelativeLayout>

            <Button
                android:id="@+id/submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rldelivery"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="90dp"
                android:layout_marginLeft="140dp"
                android:layout_marginTop="70dp"
                android:layout_marginEnd="90dp"
                android:layout_marginBottom="30dp"
                android:background="@android:color/holo_blue_bright"
                android:text="SUBMIT"
                android:textSize="15sp"
                android:textColor="#000000" />



        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
</RelativeLayout>