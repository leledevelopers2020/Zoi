<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="4dp"
    app:cardMaxElevation="2dp"
    app:cardElevation="1dp"
    android:layout_centerHorizontal="true"
    android:background="@color/shrimmercolor"
    android:padding="30dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.facebook.shimmer.ShimmerFrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/shimmerOfferPage">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:id="@+id/offerView"
                android:layout_width="120dp"
                android:layout_height="120dp"
                app:cardCornerRadius="10dp"
                app:cardMaxElevation="2dp"
                app:cardElevation="1dp"
                android:layout_centerHorizontal="true">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/offerViewImage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/shrimmercolor"
                        />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <TextView
                android:id="@+id/offerProductName"
                android:layout_below="@id/offerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#0C0C0B"
                android:textSize="20sp"
                android:background="@color/shrimmercolor"
                android:gravity="center"/>
            <TextView
                android:id="@+id/offerPercentage"
                android:layout_below="@id/offerProductName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/red"
                android:textSize="15sp"
                android:background="@color/shrimmercolor"
                android:gravity="center"/>
        </RelativeLayout>
    </com.facebook.shimmer.ShimmerFrameLayout>
</androidx.cardview.widget.CardView>