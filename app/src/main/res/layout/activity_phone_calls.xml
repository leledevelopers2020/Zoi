<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gallary_bg"
    tools:context=".Cam_Gal_Phn.PhoneCalls">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@drawable/thickouterborder"
        >

        <TextView
            android:id="@+id/callorder"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="50dp"
            android:text="PHONE-CALL ORDER"
            android:layout_weight="0.30"
            android:textStyle="bold"
            android:fontFamily="@font/architects_daughter"
            android:gravity="center"
            android:textColor="#9E0E04"
            android:textSize="30dp"
            />
        <TextView
            android:id="@+id/calltext"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="50dp"
            android:layout_weight="0.44"
            android:text="Please Wait for A Phone Call After Submitting A Request for it. "
            android:textStyle="bold"
            android:fontFamily="@font/architects_daughter"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="25dp"
            />

        <Button
            android:id="@+id/submit"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_below="@+id/callorder"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_weight="0.1"
            android:layout_marginStart="100dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="90dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/onlycurve"

            android:text="Submit"
            android:textStyle="bold"
            android:textSize="15dp"
            android:textColor="#ffffff" />
    </LinearLayout>


</RelativeLayout>